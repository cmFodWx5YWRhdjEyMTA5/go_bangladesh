<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat"
    tools:context="com.example.shadmanfahimahmad.gobangladesh.MainNavigationActivity">

    <Button
        android:id="@+id/buttonNavigation"
        android:layout_width="316dp"
        android:layout_height="92dp"
        android:text="Go To Navigation"
        android:background="@drawable/mybutton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    <Button
        android:id="@+id/buttonSuggestions"
        android:layout_width="318dp"
        android:layout_height="96dp"
        android:text="Go To Tour Suggestions"
        android:background="@drawable/mybutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.494" />

    <Button
        android:id="@+id/buttonMaps"
        android:layout_width="318dp"
        android:layout_height="96dp"
        android:background="@drawable/mybutton"
        android:text="Go To Maps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintVertical_bias="0.848" />

</android.support.constraint.ConstraintLayout>
