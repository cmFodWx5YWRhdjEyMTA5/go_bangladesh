<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Chittagong City Tours Suggestions"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <TextView
                android:id="@+id/Body"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Heading1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/back"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/Heading1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/Transport"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Heading1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/back"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/Heading1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/Accomodation"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Heading1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="290dp"
                android:background="@drawable/back"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/Heading1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/Logistics"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Heading1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/back"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/Heading1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/CoxHeading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Cox's Bazar Tours Suggestions"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <TextView
                android:id="@+id/CoxBody"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Heading1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/back"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/CoxHeading1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/CoxTransport"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/CoxHeading1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/back"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/CoxHeading1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/CoxAccomodation"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/CoxHeading1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="290dp"
                android:background="@drawable/back"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/CoxHeading1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/CoxLogistics"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/CoxHeading1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/back"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/CoxHeading1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>